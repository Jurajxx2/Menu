<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/addOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Hranolky"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/addOnSizeHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addOnSizeHeading"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Porcia: "
        app:layout_constraintBottom_toTopOf="@+id/addOnPriceHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addOn" />

    <TextView
        android:id="@+id/addOnSize"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="100g"
        app:layout_constraintBottom_toTopOf="@+id/addOnPrice"
        app:layout_constraintStart_toEndOf="@+id/addOnSizeHeading"
        app:layout_constraintTop_toBottomOf="@+id/addOn" />

    <TextView
        android:id="@+id/addOnPriceHeading"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="Cena: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addOnSizeHeading" />

    <TextView
        android:id="@+id/addOnPrice"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addOnPriceHeading"
        app:layout_constraintTop_toBottomOf="@+id/addOnSize" />

    <TextView
        android:id="@+id/addOnMena"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:text="â‚¬"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addOnPrice"
        app:layout_constraintTop_toBottomOf="@+id/addOnSize" />
</android.support.constraint.ConstraintLayout>